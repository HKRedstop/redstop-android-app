<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- dummy view for measure height -->
    <RelativeLayout
        android:id="@+id/dummy_sticky_red_company_list_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            layout="@layout/row_header_dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <!-- dummy view for gaining auto focus -->
    <RelativeLayout style="@style/commonListDummyFocusView"/>


    <!-- list -->
    <com.ntredize.redstop.main.view.recyclerview.MyRecyclerView
        android:id="@+id/sticky_red_company_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>


</RelativeLayout>