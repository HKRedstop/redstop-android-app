<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!-- content -->
    <RelativeLayout
        style="@style/redCompanyRowContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- logo -->
        <RelativeLayout
            android:id="@+id/red_company_app_row_logo_image_container"
            style="@style/redCompanyRowLogoImageContainer">

            <ImageView
                android:id="@+id/red_company_app_row_logo_image"
                style="@style/redCompanyRowLogoImage"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/content_desc_app_logo"/>

        </RelativeLayout>


        <!-- name, android package -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/red_company_app_row_logo_image_container"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/red_company_app_row_name_text"
                style="@style/redCompanyRowDisplayNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/red_company_app_row_android_package_text"
                style="@style/redCompanyRowDisplaySubNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>