<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!-- content -->
    <RelativeLayout
        style="@style/drawerItemContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- logo -->
            <LinearLayout
                android:id="@+id/drawer_item_row_container"
                style="@style/drawerItemImageContainer">

                <ImageView
                    android:id="@+id/drawer_item_row_function_image"
                    style="@style/drawerItemFunctionImage"
                    android:contentDescription="@string/content_desc_drawer_image"
                    android:src="@drawable/button_image_cert"/>

                <RelativeLayout
                    android:id="@+id/drawer_item_row_friend_image_container"
                    style="@style/drawerItemFriendImageContainer">

                    <ImageView
                        android:id="@+id/drawer_item_row_friend_image"
                        style="@style/drawerItemFriendImage"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/content_desc_drawer_image"
                        android:src="@drawable/button_image_cert"/>

                </RelativeLayout>

            </LinearLayout>


            <!-- name and desc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/drawer_item_row_container"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/drawer_item_row_name"
                    style="@style/drawerItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/drawer_item_row_desc"
                    style="@style/drawerItemDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>



    <!-- click cover -->
    <RelativeLayout
        android:id="@+id/drawer_item_row_click_cover"
        style="@style/commonListRowClickCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</FrameLayout>