<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_category_company_button"
    style="@style/homePageCategoryButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <!-- Image -->
        <ImageView
            android:id="@+id/home_category_company_image"
            style="@style/homePageCategoryButtonImage"
            android:src="@drawable/button_image_company"
            android:contentDescription="@string/label_category_company" />


        <!-- Text -->
        <TextView
            style="@style/homePageCategoryButtonText"
            android:layout_toEndOf="@id/home_category_company_image"
            android:text="@string/label_category_company"/>


    </RelativeLayout>

</RelativeLayout>