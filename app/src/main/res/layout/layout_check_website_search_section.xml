<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/check_website_search_button"
        style="@style/commonCircleButton"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/button_image_search"
        app:tint="@color/textOverColor"
        android:tintMode="src_in"
        android:contentDescription="@string/content_desc_search"/>

    <EditText
        android:id="@+id/check_website_search_text"
        style="@style/commonEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/check_website_search_button"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:hint="@string/label_check_website_hint"
        tools:ignore="Autofill"/>

</RelativeLayout>