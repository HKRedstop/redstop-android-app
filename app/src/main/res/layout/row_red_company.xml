<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!-- content -->
    <RelativeLayout
        style="@style/redCompanyRowContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- logo -->
            <RelativeLayout
                android:id="@+id/red_company_row_logo_image_container"
                style="@style/redCompanyRowLogoImageContainer">

                <ImageView
                    android:id="@+id/red_company_row_logo_image"
                    style="@style/redCompanyRowLogoImage"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/content_desc_company_logo"/>

            </RelativeLayout>


            <!-- red star -->
            <LinearLayout
                android:id="@+id/red_company_row_red_star_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/red_company_row_red_star_image_1"
                    style="@style/redCompanyRowRedStarImage"
                    android:contentDescription="@string/content_desc_company_red_star"/>

                <ImageView
                    android:id="@+id/red_company_row_red_star_image_2"
                    style="@style/redCompanyRowRedStarImage"
                    android:contentDescription="@string/content_desc_company_red_star"/>

                <ImageView
                    android:id="@+id/red_company_row_red_star_image_3"
                    style="@style/redCompanyRowRedStarImage"
                    android:contentDescription="@string/content_desc_company_red_star"/>

                <ImageView
                    android:id="@+id/red_company_row_red_star_image_4"
                    style="@style/redCompanyRowRedStarImage"
                    android:contentDescription="@string/content_desc_company_red_star"/>

                <ImageView
                    android:id="@+id/red_company_row_red_star_image_5"
                    style="@style/redCompanyRowRedStarImage"
                    android:contentDescription="@string/content_desc_company_red_star"/>

            </LinearLayout>


            <!-- display name, sub name and category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/red_company_row_logo_image_container"
                android:layout_toStartOf="@id/red_company_row_red_star_container"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/red_company_row_display_name_text"
                    style="@style/redCompanyRowDisplayNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/red_company_row_display_sub_name_text"
                    style="@style/redCompanyRowDisplaySubNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>



    <!-- click cover -->
    <RelativeLayout
        android:id="@+id/red_company_row_click_cover"
        style="@style/commonListRowClickCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</FrameLayout>