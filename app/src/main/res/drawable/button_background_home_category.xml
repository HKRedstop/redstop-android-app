<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="?attr/homeCategoryButtonBorderWidth" android:color="?attr/homeCategoryButtonBorderColor"/>
            <solid android:color="?attr/homeCategoryButtonBackgroundColorActive"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="?attr/homeCategoryButtonBorderWidth" android:color="?attr/homeCategoryButtonBorderColor"/>
            <solid android:color="?attr/homeCategoryButtonBackgroundColorActive"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/accentColor"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="?attr/homeCategoryButtonBorderWidth" android:color="?attr/homeCategoryButtonBorderColor"/>
            <solid android:color="?attr/homeCategoryButtonBackgroundColor"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</selector>