<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Setting Page -->
    <style name="settingRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:background">?attr/backgroundNormalColor</item>
    </style>

    <style name="settingRowName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textNormalColor</item>
    </style>

    <style name="settingRowValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/primaryColor</item>
    </style>


    <!-- Setting Item -->
    <style name="settingItemRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/backgroundNormalColor</item>
    </style>

    <style name="settingItemRowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textNormalColor</item>
    </style>

</resources>