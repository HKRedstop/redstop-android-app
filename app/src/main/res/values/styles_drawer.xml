<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Common -->
    <style name="drawerSeparateLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/backgroundSeparatorColor</item>
    </style>


    <!-- Header -->
    <style name="drawerHeaderContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="drawerHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/primaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Item -->
    <style name="drawerItemContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="drawerItemImage">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="drawerItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textNormalColor</item>
    </style>

    <style name="drawerItemDesc">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/textRemarkColor</item>
    </style>

</resources>